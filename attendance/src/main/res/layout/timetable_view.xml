<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TimeTablePagerFragment">

    <!-- A RecyclerView with some commonly used attributes -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true"
        android:clipToPadding="false"
        tools:context=".fragment.Dayfragment"
        tools:listitem="@layout/day_list_item"/>

    <LinearLayout android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView android:id="@+id/no_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_classes"
            android:textSize="20sp"
            android:padding="3dp"
            android:layout_margin="10dp"
            android:textStyle="bold"/>

        <TextView android:id="@+id/swipe_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:gravity="start"
            android:text="@string/swipe_info"/>

    </LinearLayout>

</FrameLayout>
