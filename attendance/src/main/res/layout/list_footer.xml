<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tvClass"
        android:layout_toStartOf="@+id/tvClass"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/atten_list_footer_total"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvTotalPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvTotal"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:text="100%"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/pbTotalPercent"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_below="@+id/tvTotal"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@+id/tvTotalPercent"
        android:layout_toStartOf="@+id/tvTotalPercent"
        android:layout_centerVertical="true"
        android:progressDrawable="@drawable/progress_level"
        android:progress="80" />

    <TextView
        android:id="@+id/tvClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvTotal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="18sp"
        android:text="0/0" />

</RelativeLayout>