<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Myactionbar" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar_L</item>
        <item name="android:actionBarStyle">@style/ActionBar_L</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBar.Solid.Myactionbar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_myactionbar</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_myactionbar</item>
    </style>

    <style name="ActionBar_L" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/l_actionbar</item>
        <item name="android:background">@color/l_actionbar</item>
    </style>
    
    <style name="listViewActivatedStyle"/>

</resources>